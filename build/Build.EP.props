<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="12.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<!--
		TODO:
			Change your product's version here.
			This will be used everywhere.
	-->
	<PropertyGroup>
		<MajorVersion>0</MajorVersion>
		<MinorVersion>3</MinorVersion>
		<PatchVersion>1</PatchVersion>
		<PrereleaseTag></PrereleaseTag>
		
		<AssemblyDescription>Contains services for command line tools.</AssemblyDescription>
	</PropertyGroup>
	
	<!--
		TODO:
			Specify all projects with its metadata.
		
		Required metadata:
			Platform: Specifies the target platform of the project.
			
		Optional metadata:
			SkipBuild[true]: Skip building the project.
	-->
	<ItemGroup>
		<Projects Include="$(SolutionDir)src\Konsola\Konsola.csproj">
			<Platform>portable-net403+netcore45</Platform>
		</Projects>
		<Projects Include="$(SolutionDir)src\Konsola.Net40\Konsola.Net40.csproj">
			<Platform>net40</Platform>
		</Projects>
	</ItemGroup>
	
	<Target Name="SpecifyNuspecTransforms">
		<ItemGroup>
			<!--
				TODO:
					Edit or add nuspec transforms.
					These will be applied to your nuspec files when packaging.
			-->
			<NuspecTransform Include="@(Nuspecs)">
				<Find>__VERSION__</Find>
				<ReplaceWith>$(Version)</ReplaceWith>
			</NuspecTransform>
			<NuspecTransform Include="@(Nuspecs)">
				<Find>__DESCRIPTION__</Find>
				<ReplaceWith>$(AssemblyDescription)</ReplaceWith>
			</NuspecTransform>
		</ItemGroup>
	</Target>
</Project>